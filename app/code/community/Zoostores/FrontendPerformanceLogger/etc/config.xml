    <global>
        <models>
            <frontendperformancelogger>
                <class>Zoostores_FrontendPerformanceLogger_Model</class>
                <resourceModel>frontendperformancelogger_mysql4</resourceModel>
            </frontendperformancelogger>
            <frontendperformancelogger_mysql4>
                <class>Zoostores_FrontendPerformanceLogger_Model_Mysql4</class>
                <entities>
                    <log><!-- name slightly inconsistent so it matches existing magento log tables --> 
                        <table>log_frontendperformance</table>
                    </log>
                </entities>
            </frontendperformancelogger_mysql4>
        </models>
        <resources>
            <frontendperformancelogger_setup>
                <setup>
                    <module>Zoostores_FrontendPerformanceLogger</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </frontendperformancelogger_setup>
            <frontendperformancelogger_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </frontendperformancelogger_write>
            <frontendperformancelogger_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </frontendperformancelogger_read>
        </resources>
        <blocks>
            <frontendperformancelogger>
                <class>Zoostores_FrontendPerformanceLogger_Block</class>
            </frontendperformancelogger>
        </blocks>
