    <modules>
        <Zoostores_FrontendPerformanceLogger>
            <version>0.0.1</version>
        </Zoostores_FrontendPerformanceLogger>
    </modules>
    <frontend>
        <routers>
            <frontendperformancelogger>
                <use>standard</use>
                <args>
                    <module>Zoostores_FrontendPerformanceLogger</module>
                    <frontName>frontendperformancelogger</frontName>
                </args>
            </frontendperformancelogger>
        </routers>
        <layout>
            <updates>
                <frontendperformancelogger>
                    <file>frontendperformancelogger.xml</file>
                </frontendperformancelogger>
            </updates>
        </layout>
    </frontend>
